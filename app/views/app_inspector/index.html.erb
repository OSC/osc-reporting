<h1>App Inspector</h1>
<select name="app_inspector_selector" id="app_inspector_selector">
  <% @app_names.each do |app_name| %>
    <option value="<%= app_name %>"><%= app_name %></option>
  <%end %>
</select>
<turbo_stream action="replace" target="app_inspector_histogram">
  <template></template>
  <%= render partial: 'histogram', locals: { graph_data: @app_cpus['graph_data'], bin_size: @app_cpus['bin_size'] } %>
</turbo-stream>
<p id="x_label">Cores per job</p>
<input id="app_inspector_bins_slider" type="range" min="1" max="20" value="5">
<%= form_with url: replace_app_inspector_path, class: 'hidden' do |form| %>
  <%= form.submit %>
<% end %>
